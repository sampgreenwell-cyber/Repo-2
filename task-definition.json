{
  "family": "todo-app-fargate",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "arn:aws:iam::319701502450:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::319701502450:role/ecsTaskExecutionRole",
  "containerDefinitions": [
    {
      "name": "todo-app",
      "image": "319701502450.dkr.ecr.us-east-2.amazonaws.com/todo-app-fargate:latest",
      "portMappings": [
        {
          "containerPort": 3000,
          "protocol": "tcp"
        }
      ],
      "essential": true,
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/todo-app-fargate",
          "awslogs-region": "us-east-2",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "environment": [
        {
          "name": "NODE_ENV",
          "value": "production"
        }
      ]
    }
  ]
}